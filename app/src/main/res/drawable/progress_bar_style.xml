<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#D3D3D3" />
            <corners android:radius="15dp" /> <!-- Rounded corners for the background -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#0000FF" /> <!-- Blue color -->
                <corners android:radius="5dp" /> <!-- Rounded corners for the progress -->
            </shape>
        </clip>
    </item>
</layer-list>
