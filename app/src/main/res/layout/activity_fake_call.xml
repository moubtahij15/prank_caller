<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_marginTop="70dp"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/callerImage"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/character" />

    <TextView
        android:id="@+id/callerName"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/callerImage"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/callerImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Caller Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/callerNumber"
        android:layout_below="@+id/callerName"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/callerName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Caller Number"
        android:textSize="18sp" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:ignore="MissingConstraints">


        <RelativeLayout
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="80dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/rejectButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="90dp"
                    android:background="@drawable/ic_reject_button" />

                <ImageButton

                    android:id="@+id/acceptButton"
                    android:layout_marginLeft="90dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_accept_button" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>

